{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "friendly-wager-backend",
  "version": "1.0.0",
  "description": "Backend API for FriendlyWager golf betting application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "migrate": "psql $DATABASE_URL -f database/migrations/001_initial_schema.sql",
    "seed": "psql $DATABASE_URL -f database/seeds/001_seed_data.sql",
    "db:reset": "npm run migrate && npm run seed",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\"",
    "logs": "tail -f logs/combined.log"
  },
  "keywords": [
    "golf",
    "betting",
    "wager",
    "api",
    "express",
    "postgresql",
    "redis",
    "websocket"
  ],
  "author": "FriendlyWager Team",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "redis": "^5.8.3",
    "socket.io": "^4.8.1",
    "stripe": "^19.1.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.1",
    "supertest": "7.1.4"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "server.js"
    ],
    "ext": "js,json",
    "ignore": [
      "logs/*",
      "node_modules/*"
    ],
    "exec": "node server.js"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
